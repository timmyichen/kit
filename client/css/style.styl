lightshades = #F8F8F5
lightaccent = #84B9E0
mainbrand = #4D8BD6
darkaccent = #7080CC
darkshades = #302F7F

body 
  background lightshades
  
  .required-star
    color #DB2828
    margin -.2em 0 0 .2em

  .split-half
    display flex !important
    justify-content space-between
    align-items baseline
  
  .tabbed
    padding-left 10px

.hidden
  display none

#navbar
  background transparent
  color darkshades
  border none
  .item
    color darkshades
    border none !important
    .button
      background darkaccent

.alert-container
  text-align center
  position absolute
  top 60px
  left 50%
  z-index 10 !important
  visibility 1
  opacity 0.95
  transition all 200ms
  .hidden
    visibility 0
    display none

#my-info
  div.ui.card
    div.card-controls
      position absolute
      right 5px
      top 5px
      display flex
      flex-direction column
      button
        margin 5px
        padding 5px

.profile-page
  .subtitle
    margin-top 0

.user-search
  .aligned.column
    margin-top 14px !important
    padding 0 24px !important

#friends-page
  .friend-card
    border 1px solid skyblue
    border-radius 5px
    margin 15px
    padding 15px
    .primary-info
      display flex
      justify-content space-between
      align-items center
      .left
        width 40%
        .extras
          a
            cursor pointer
      .right
        width 50%
        table
          border none
          td
            padding 5px 0
    .more
      text-align center
      a
        cursor pointer

#dashboard
  #upcoming-birthdays
    .dropdown.select
      padding 5px 15px
      background white
      margin 0 5px
      border 1px solid lightgray
      border-radius 3px